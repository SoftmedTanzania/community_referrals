<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.ei.opensrp.drishti.Fragments.AncRegister1stFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/layout_mother_register" />

        <include layout="@layout/layout_husband_register" />

        <include layout="@layout/layout_previous_birth" />
        <EditText
            android:id="@+id/editTextClinicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Jina la kliniki aliyoshauriwa kwenda"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textColor="#a12727"
            android:text="TUNZA"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:clickable="false" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
