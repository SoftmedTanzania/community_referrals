<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:visibility="gone">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:text="@string/app_name_htmr"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@color/colorPrimary" />

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="56dp"
                        android:layout_marginLeft="72dp"
                        android:layout_marginRight="72dp"
                        android:layout_marginTop="46dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_separator_third">

                                <TextView
                                    android:id="@+id/form_heading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginTop="32dp"
                                    android:text="@string/page_title"
                                    android:textColor="@color/black"
                                    android:textSize="42sp" />

                                <TextView
                                    android:id="@+id/cbhs_number_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/client_name"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginTop="16dp"
                                    android:text="@string/title_cbhs_number"
                                    android:textColor="@color/card_title_text"
                                    android:textSize="14sp"
                                    android:visibility="invisible" />

                                <TextView
                                    android:id="@+id/cbhs_number_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/client_name"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_toRightOf="@+id/cbhs_number_title"
                                    android:textColor="@color/card_title_text"
                                    android:textSize="14sp"
                                    android:visibility="invisible" />

                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_separator_third"
                                android:orientation="horizontal"
                                android:paddingLeft="32dp"
                                android:paddingRight="32dp">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:layout_weight="0.4"
                                    android:paddingBottom="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/editTextfName"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="0dp"
                                            android:layout_marginRight="0dp"
                                            android:layout_weight="0.2"
                                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                            android:focusable="true"
                                            android:hint="@string/client_firstname"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords|textPersonName"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="Jina la kwanza"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />

                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/editTextmName"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:layout_weight="0.2"
                                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                            android:hint="@string/client_middlename"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords|textPersonName"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="16sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="Jina la kati"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />

                                    </LinearLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_weight="0.4"
                                    android:paddingBottom="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/editTextlName"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                            android:hint="@string/client_surname"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords|textPersonName"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="16sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="Jina la mwisho"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />

                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/edittextPhone"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:layout_weight="1"
                                            android:hint="@string/client_phone"
                                            android:imeOptions="actionNext"
                                            android:inputType="number"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="Namba ya simu ya Mteja"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />


                                    </LinearLayout>

                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_separator_third"
                                android:orientation="horizontal"
                                android:paddingLeft="32dp"
                                android:paddingRight="32dp">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:layout_weight="0.5"
                                    android:paddingBottom="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp">

                                        <fr.ganfra.materialspinner.MaterialSpinner
                                            android:id="@+id/spinnerGender"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="16dp"
                                            android:layout_weight="0.5"
                                            app:ms_arrowColor="@color/accent"
                                            app:ms_arrowSize="14dp"
                                            app:ms_baseColor="@color/accent"
                                            app:ms_enableFloatingLabel="false"
                                            app:ms_hint="@string/client_sex"
                                            app:ms_hintColor="@color/hint_text"
                                            app:ms_multiline="false"
                                            app:ms_thickness="1dp"
                                            app:paddingEnd="16dp"
                                            app:paddingStart="16dp" />


                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/reg_dob"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:layout_weight="0.5"
                                            android:clickable="true"
                                            android:editable="false"
                                            android:focusable="false"
                                            android:hint="@string/client_birthday"
                                            android:inputType="date"
                                            android:textColor="@color/text_black"
                                            android:textSize="14sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="Date of birth"
                                            app:met_floatingLabelTextColor="@color/colorPrimary"
                                            app:met_iconRight="@drawable/ic_calendar_today" />


                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_weight="0.5"
                                    android:paddingBottom="16dp">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/editTextKijiji"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:layout_weight="1"
                                            android:hint="@string/client_address"
                                            android:imeOptions="actionNext"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabelText="Mahali anapokaa"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />


                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/editTextVillageLeader"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginTop="8dp"
                                            android:layout_weight="1"
                                            android:hint="@string/client_veo"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabelText="Mahali anapokaa"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />
                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_height="80dp"
                                android:layout_width="match_parent"
                                android:background="@color/card_separator_third"
                                android:orientation="horizontal"
                                android:paddingLeft="32dp"
                                android:paddingRight="32dp">

                                <RelativeLayout
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:layout_weight="0.5">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentStart="true">

                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/editTextOthers"
                                            android:visibility="gone"
                                            android:layout_width="0dp"
                                            android:layout_marginTop="8dp"
                                            android:layout_weight="0.5"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/title_ctc_number"
                                            android:imeOptions="actionNext"
                                            android:inputType="text"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="Namba ya CTC"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />

                                        <fr.ganfra.materialspinner.MaterialSpinner
                                            android:id="@+id/registration_reasons_spinner"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="0.5"
                                            android:spinnerMode="dialog"
                                            app:ms_arrowColor="@color/colorPrimary"
                                            app:ms_arrowSize="14dp"
                                            app:ms_baseColor="@color/colorPrimary"
                                            app:ms_enableFloatingLabel="false"
                                            app:ms_hint="@string/client_registration_reason"
                                            app:ms_hintColor="@color/hint_text"
                                            app:ms_multiline="false"
                                            app:ms_thickness="1dp" />


                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_weight="0.5"
                                    android:paddingBottom="16dp">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" >
                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/helper_name"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="0dp"
                                            android:layout_marginRight="0dp"
                                            android:layout_weight="1"
                                            android:focusable="true"
                                            android:hint="@string/helper_name"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords|textPersonName"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="@string/helper_name"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />



                                        <com.rengwuxian.materialedittext.MaterialEditText
                                            android:id="@+id/helper_phone_number"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:layout_weight="1"
                                            android:hint="@string/helper_phone_number"
                                            android:imeOptions="actionNext"
                                            android:inputType="phone"
                                            android:maxLength="10"
                                            android:textColor="@color/primary_text"
                                            android:textColorHint="@color/hint_text"
                                            android:textSize="14sp"
                                            app:met_floatingLabel="normal"
                                            app:met_floatingLabelText="@string/helper_phone_number"
                                            app:met_floatingLabelTextColor="@color/colorPrimary" />
                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/is_a_cbhs_client"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="32dp"
                                android:inputType="numberDecimal"
                                android:textColor="@color/colorPrimary"
                                android:text="@string/is_a_cbhs_client"
                                android:textSize="18sp" />
                            <View
                                android:id="@+id/strip4"
                                android:layout_marginLeft="32dp"
                                android:layout_width="60dp"
                                android:layout_height="5dp"
                                android:layout_below="@id/initial_information_title"
                                android:layout_marginTop="8dp"
                                android:background="@color/card_separator" />
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:background="@color/card_separator_third"
                                android:orientation="horizontal"
                                android:paddingLeft="32dp"
                                android:paddingRight="32dp">

                                <RelativeLayout
                                    android:layout_marginTop="8dp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:layout_weight="0.5"
                                    android:paddingBottom="16dp">

                                    <LinearLayout
                                        android:layout_centerVertical="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <RadioGroup
                                            android:layout_marginLeft="16dp"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:id="@+id/is_cbhs_client"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <RadioButton
                                                android:id="@+id/yes"
                                                android:layout_weight="1"
                                                android:layout_width="0dp"
                                                android:checked="true"
                                                android:layout_height="wrap_content"
                                                android:text="@string/cbhs_client"/>
                                            <RadioButton
                                                android:layout_weight="1"
                                                android:id="@+id/no"
                                                android:layout_marginLeft="16dp"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:text="@string/referral_client"/>
                                        </RadioGroup>

                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_weight="0.5"
                                    android:paddingBottom="16dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:id="@+id/cbhs_layout"
                                            android:orientation="horizontal"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.5" >
                                            <TextView
                                                android:id="@+id/prefix"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:textSize="18sp"/>

                                            <com.rengwuxian.materialedittext.MaterialEditText
                                                android:id="@+id/editTextDiscountId"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="8dp"
                                                android:layout_marginRight="16dp"
                                                android:hint="@string/title_cbhs_number"
                                                android:inputType="numberDecimal"
                                                android:imeOptions="actionNext"
                                                android:textColor="@color/primary_text"
                                                android:textColorHint="@color/black_translucent"
                                                android:textSize="14sp"
                                                app:met_floatingLabel="normal"
                                                app:met_floatingLabelText="@string/title_cbhs_number"
                                                app:met_floatingLabelTextColor="@color/colorPrimary" />


                                        </LinearLayout>


                                        <View
                                            android:layout_width="0dp"
                                            android:layout_weight="0.5"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>
                                </RelativeLayout>

                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp">

                                <Button
                                    android:id="@+id/referal_button"
                                    android:layout_width="200dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="16dp"
                                    android:text="@string/register_clients_button_label"
                                    android:textColor="@color/white"
                                    android:background="@color/colorPrimary"/>


                            </RelativeLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>

    </ScrollView>

</RelativeLayout>